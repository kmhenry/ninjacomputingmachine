
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <%= f.error_notification %>
    <h2 class="text-center">Forgot your password?</h2>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email to send reset instructions", input_html: {class: "form-control"} %>
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary", input_html: {class: "form-control"} %>
<% end %>

<%= render "devise/shared/links" %>
