
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>
  <h2 class="text-center">Change your password</h2>

    <%= f.input :password, label: "New password", required: true, autofocus: true, label: false, placeholder: "New password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, label: false, placeholder: "Confirm your new password", required: true, input_html: {class: "form-control"} %>
    <%= f.button :submit, "Change my password", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
