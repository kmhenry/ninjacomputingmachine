
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <h2>Sign up</h2>

    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
    <%= f.input :password, required: true, label: false, placeholder: "Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm Email" %>
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
